<Window x:Class="OverlayImageForWindows.Views.GetVideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverlayImageForWindows.Views"
        mc:Ignorable="d"
        Title="GetVideoWindow" Height="404" Width="339" ResizeMode="NoResize">
    <Grid>
        <ListBox Name="VideoView" HorizontalContentAlignment="Center" MouseWheel="VideoView_MouseWheel">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding ThumNailPath}" Height="150" Width="150"></Image>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
